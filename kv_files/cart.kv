#:kivy 2.0.0
<CartScreen>:
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1  # Warna latar belakang putih
            Rectangle:
                pos: self.pos
                size: self.size

        # Header
        BoxLayout:
            size_hint_y: None
            height: "120dp"
            padding: [10, 10]
            canvas.before:
                Color:
                    rgba: (1, 0.8, 0.2, 1)
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [0, 0, 50, 50]

            Label:
                text: "Keranjang"
                color: (0, 0, 0, 1)
                font_size: "24sp"
                bold: True

            ImageButton:
                source: 'assets/refresh.png'
                size_hint_x: 0.1
                size_hint_y: 1
                width: '30dp'
                text: "Ref"
                color: 0, 0, 0, 1
                background_color: 0, 0, 0, 0  # Transparan
                on_press: root.refresh_cart()

        # ScrollView untuk item di keranjang
        ScrollView:
            size_hint_y: 0.8

            GridLayout:
                id: cart_grid
                cols: 1
                padding: 10
                spacing: 10
                size_hint_y: None
                height: self.minimum_height
                

        # Checkout button container
        BoxLayout:
            size_hint_y: None
            height: '50dp'
            orientation: 'horizontal'
            padding: [10, 10]
            canvas.before:
                Color:
                    rgba: 0, 0.5, 0.8, 1  
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [20]

            Button:
                text: "Checkout"
                on_press: root.checkout()
                size_hint_x: 0.7
                background_normal: ''  
                background_color: 0, 0.5, 0.8, 1  

        # Bottom NavBar
        BoxLayout:
            size_hint_y: None
            height: "60dp"
            padding: [5, 10]
            spacing: 0
            canvas.before:
                Color:
                    rgba: (1, 0.8, 0.2, 1)  # Warna kuning
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [50, 50, 0, 0]
            
            ImageButton:
                source: 'assets/home.png'  # Ikon Home
                on_press: root.go_to_home()
                size_hint_x: 1 

            ImageButton:
                source: 'assets/search.png'  # Ikon Search
                on_press: root.go_to_search()
                size_hint_x: 1 

            ImageButton:
                source: 'assets/cart.png'  # Ikon Cart
                size_hint_x: 1 

            ImageButton:
                source: 'assets/notification.png'  # Ikon Notification
                on_press: root.go_to_notification()
                size_hint_x: 1 

            ImageButton:
                source: 'assets/profile.png'  # Ikon Profile
                on_press: root.go_to_profile()
                size_hint_x: 1
