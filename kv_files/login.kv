#:kivy 2.0.0
<LoginScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: [20, 50, 20, 20]
        spacing: 20
        canvas.before:
            Color:
                rgba: (0.96, 0.96, 0.96, 1)
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            text: 'Login'
            font_size: 32
            color: (0.2, 0.6, 0.86, 1)
            bold: True

        TextInput:
            id: username
            hint_text: 'Username'
        
        TextInput:
            id: password
            hint_text: 'Password'
            password: True
        Button:
            text: 'Login'
            on_press: root.login()
        Button:
            text: 'Daftar'
            on_press: root.go_to_register()

