#:kivy 2.0.0
<SearchScreen>:
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1  # Warna latar belakang putih
            Rectangle:
                pos: self.pos
                size: self.size
        # Header dan Search Bar
        BoxLayout:
            size_hint_y: None
            height: "120dp"
            padding: [20, 20]
            canvas.before:
                Color:
                    rgba: (1, 0.8, 0.2, 1)  # Warna kuning
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [0, 0, 50, 50]

            Label:
                text: "Searching"
                font_size: "24sp"
                bold: True
                color: (0, 0, 0, 1)

        BoxLayout:
            orientation: 'vertical'
            TextInput:
                id: search_input
                hint_text: "Cari produk..."
            Button:
                text: "Cari"
                on_release: root.search_products(search_input.text)  # Panggil fungsi search_products dengan teks dari input
            ScrollView:
                GridLayout:
                    id: product_grid
                    cols: 1
                    size_hint_y: None
                    height: self.minimum_height

              
        # Bottom NavBar
        BoxLayout:
            size_hint_y: None
            height: "60dp"
            padding: [5, 10]  # Menghilangkan padding agar tombol memenuhi lebar layar
            spacing: 0  # Menghilangkan jarak antar tombol
            canvas.before:
                Color:
                    rgba: (1, 0.8, 0.2, 1)  # Warna kuning
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [50, 50, 0, 0]
            
            ImageButton:
                source: 'assets/home.png'  # Ikon Home
                on_press: root.go_to_home()
                size_hint_x: 1 

            ImageButton:
                source: 'assets/search.png'  # Ikon Search
                size_hint_x: 1 

            ImageButton:
                source: 'assets/cart.png'  # Ikon Cart
                on_press: root.go_to_cart()
                size_hint_x: 1 

            ImageButton:
                source: 'assets/notification.png'  # Ikon Notification
                on_press: root.go_to_notification()
                size_hint_x: 1 

            ImageButton:
                source: 'assets/profile.png'  # Ikon Profile
                on_press: root.go_to_profile()
                size_hint_x: 1 
