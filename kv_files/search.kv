#:kivy 2.0.0
<SearchScreen>:
    BoxLayout:
        orientation: 'vertical'
        
        # Header 
        BoxLayout:
            size_hint_y: None
            height: "100dp"
            padding: [20, 20]
            canvas.before:
                Color:
                    rgba: (1, 0.8, 0.2, 1)  # Warna kuning
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [0, 0, 50, 50]

            Label:
                text: "Searching"
                font_size: "24sp"
                bold: True
                color: (0, 0, 0, 1)  # Teks hitam
        
        # Lokasi Anda
        BoxLayout:
            orientation: 'vertical'
            padding: [10, 10]
            spacing: 10
            size_hint_y: None
            height: "120dp"
            
            BoxLayout:
                spacing: 5
                size_hint_y: None
                height: "40dp"
                Image:
                    source: 'assets/location_icon.png'
                    size_hint_x: None
                    width: "30dp"
                Label:
                    text: "Lokasi anda"
                    font_size: "18sp"
                    color: (0, 0, 0, 1)
            
            Label:
                text: "Boyolali, Boyolali, Kabupaten Boyolali, Jawa Tengah"
                font_size: "14sp"
                color: (0.3, 0.3, 0.3, 1)
                size_hint_y: None
                height: "30dp"

        # Lokasi Toko Terdekat (Integrasi Google Map)
        MapView:
            lat: -7.5306  # Contoh latitude untuk Boyolali
            lon: 110.5928  # Contoh longitude untuk Boyolali
            zoom: 15
            size_hint_y: None
            height: "200dp"

        # Bagian Search Bar dan List Toko Terdekat tetap sama seperti di kode asli Anda.

         # Bagian Bottom NavBar juga tetap sama.


        # List Toko Terdekat
        BoxLayout:
            orientation: 'vertical'
            padding: [10, 0]

            Button:
                text: "Sumber Tani\n3 KM"
                font_size: "18sp"
                text_size: self.width, None
                height: "60dp"
                background_normal: ''
                background_color: 0.95, 0.95, 0.95, 1  # Light grey background
                color: 0, 0, 0, 1
                halign: 'center'
                valign: 'middle'

            Button:
                text: "Berkah Tani\n5 KM"
                font_size: "18sp"
                text_size: self.width, None
                height: "60dp"
                background_normal: ''
                background_color: 0.95, 0.95, 0.95, 1  # Light grey background
                color: 0, 0, 0, 1
                halign: 'center'
                valign: 'middle'


         # Bottom NavBar
        BoxLayout:
            size_hint_y: None
            height: "60dp"
            padding: [5, 10]  # Menghilangkan padding agar tombol memenuhi lebar layar
            spacing: 0  # Menghilangkan jarak antar tombol
            canvas.before:
                Color:
                    rgba: (1, 0.8, 0.2, 1)  # Warna kuning
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [50, 50, 0, 0]
            
            ImageButton:
                source: 'assets/home.png'  # Ikon Home
                on_press: root.go_to_home()
                size_hint_x: 1 

            ImageButton:
                source: 'assets/search.png'  # Ikon Search
                size_hint_x: 1 

            ImageButton:
                source: 'assets/cart.png'  # Ikon Cart
                on_press: root.go_to_cart()
                size_hint_x: 1 

            ImageButton:
                source: 'assets/notification.png'  # Ikon Notification
                on_press: root.go_to_notification()
                size_hint_x: 1 

            ImageButton:
                source: 'assets/profile.png'  # Ikon Profile
                on_press: root.go_to_profile()
                size_hint_x: 1 